<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lFriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivFriend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_monopoly_logo"
            app:layout_constraintBottom_toBottomOf="@id/cvCard"
            app:layout_constraintEnd_toEndOf="@id/cvCard"
            app:layout_constraintStart_toStartOf="@id/cvCard"
            app:layout_constraintTop_toTopOf="@id/cvCard" />
    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/tvFriendNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/friend_s_nickname"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cvCard"
        app:layout_constraintStart_toEndOf="@id/cvCard"
        app:layout_constraintTop_toTopOf="@id/cvCard" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="@id/tvFriendNick"
        app:layout_constraintTop_toBottomOf="@id/cvCard" />

</androidx.constraintlayout.widget.ConstraintLayout>