<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lFriendRequests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivFriend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="@id/cvCard"
            app:layout_constraintEnd_toEndOf="@id/cvCard"
            app:layout_constraintStart_toStartOf="@id/cvCard"
            app:layout_constraintTop_toTopOf="@id/cvCard"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvFriendNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxEms="7"
        android:text="@string/friend_s_nickname"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cvCard"
        app:layout_constraintStart_toEndOf="@id/cvCard"
        app:layout_constraintTop_toTopOf="@id/cvCard" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="@id/tvFriendNick"
        app:layout_constraintTop_toBottomOf="@id/cvCard" />

    <ImageView
        android:id="@+id/ivAccept"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/item_accept"
        app:layout_constraintBottom_toBottomOf="@id/tvFriendNick"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/ivReject"
        app:layout_constraintTop_toTopOf="@id/tvFriendNick" />

    <ImageView
        android:id="@+id/ivReject"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/item_reject"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tvFriendNick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFriendNick" />


</androidx.constraintlayout.widget.ConstraintLayout>