<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.friends.user.UserFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@null"
        android:src="@drawable/item_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack">

        <ImageView
            android:id="@+id/ivFriend"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_monopoly_logo"
            app:layout_constraintBottom_toBottomOf="@id/cvCard"
            app:layout_constraintEnd_toEndOf="@id/cvCard"
            app:layout_constraintStart_toStartOf="@id/cvCard"
            app:layout_constraintTop_toBottomOf="@id/cvCard" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvFriendNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvCard" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/grey"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@id/cvCard"
        app:layout_constraintStart_toStartOf="@id/cvCard"
        app:layout_constraintTop_toBottomOf="@id/tvFriendNick">

        <ImageView
            android:id="@+id/ivSendMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:src="@drawable/item_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSendMessage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/grey"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@id/cvCard"
        app:layout_constraintStart_toEndOf="@id/cvCard"
        app:layout_constraintTop_toBottomOf="@id/tvFriendNick">

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@null"
            android:src="@drawable/item_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/grey"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSend">

        <include layout="@layout/item_rank" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutInfoAllMatches"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/grey"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@+id/layoutRank"
        app:layout_constraintTop_toBottomOf="@id/layoutRank">

        <TextView
            android:id="@+id/tvCountOfAllMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_94"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/matches"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCountOfAllMatches" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutInfoOfWinningMatches"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/grey"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/LayoutCountOfFriends"
        app:layout_constraintStart_toEndOf="@+id/LayoutInfoAllMatches"
        app:layout_constraintTop_toBottomOf="@id/layoutRank">

        <TextView
            android:id="@+id/tvCountOfWinningMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_25"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wins"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCountOfWinningMatches" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutCountOfFriends"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/grey"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@id/layoutRank"
        app:layout_constraintTop_toBottomOf="@id/layoutRank">

        <ImageView
            android:id="@+id/ivShowFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/item_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCountOfFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_11"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCountOfFriends" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory_1"
        app:layout_constraintStart_toStartOf="@id/LayoutInfoAllMatches"
        app:layout_constraintTop_toBottomOf="@id/LayoutInfoAllMatches" />

</androidx.constraintlayout.widget.ConstraintLayout>